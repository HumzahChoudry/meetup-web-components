{
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!**/{node_modules,lib,coverage,assets,utils}/**",
    "!**/*.story.{js,jsx}"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "setupFiles": [
    "<rootDir>/src/utils/jestSystemShim.js"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx"
  ],
  "moduleNameMapper": {
    "^(base64-image-loader[!?].+)": "<rootDir>/__mocks__/base64Image.js"
  },
  "testRegex": "src/.*\\.test\\.jsx?$",
  "transformIgnorePatterns": [
    "node_modules(?!\/meetup-web-components)"
  ]
}
